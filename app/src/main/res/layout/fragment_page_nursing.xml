<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_nursing_pager_card"
    android:orientation="vertical">

    <com.gots.intelligentnursing.customview.LineChartPager
        android:id="@+id/line_chart_pager_page_nursing"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="28dp"/>

    <ViewStub
        android:id="@+id/vs_page_nursing_no_login_hint"
        android:inflatedId="@+id/tv_page_nursing_hint"
        android:layout="@layout/view_tv_page_nursing_no_login_hint"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="28dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/bt_page_nursing_fence_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bt_page_nursing_fense_setting"
            android:background="?android:attr/selectableItemBackground"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="20dp"
            android:focusable="true"
            android:text="围栏设置"/>

        <ImageView
            android:id="@+id/bt_page_nursing_elder_info"
            android:layout_width="132dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="80dp"
            android:layout_marginTop="20dp"
            android:background="?android:attr/selectableItemBackground"
            android:focusable="true"
            android:src="@drawable/bt_page_nursing_information_perfection"/>

    </LinearLayout>



</LinearLayout>


